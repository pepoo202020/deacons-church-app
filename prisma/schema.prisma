generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_CONNECTION_URL")
}

// =========================== ENUMS ======================
enum SeasonTones {
  ANNUAL
  FARAIHI
  SHAANINI
  KIAHKI
  SIAMI
  HAZAINI
}

enum CopticMonths {
  THOUT
  PAOPI
  HATHOR
  KOIAK
  TOBI
  MESHIR
  PAREMHAT
  PAREMOUDE
  PASHONS
  PAONI
  EPIP
  MASORI
  KOGIENAVOT
}

// ============================ MODELS =====================
model ChurchSeason {
  id String @id @default(cuid())

  // Multi-language names
  seasonName_ar String
  seasonName_en String
  seasonName_co String

  // Visual styling
  backgroundColor String
  textColor       String
  accentColor     String?

  // Content
  openingPhrase   String
  description     String
  longDescription String?
  seasonTone      SeasonTones @default(ANNUAL)

  // Media
  images         String[] @default([])
  specialIcon    String?
  bannerImage    String?
  thumbnailImage String?

  // Links and references
  postLink      String?
  externalLinks Json? // Store array of {title, url, description}

  // Timing
  startDate      DateTime
  endDate        DateTime
  isRecurring    Boolean  @default(false)
  recurrenceRule String? // For recurring seasons

  // Metadata
  tags       String[] @default([])
  isPublic   Boolean  @default(true)
  isFeatured Boolean  @default(false)
  sortOrder  Int      @default(0)

  // SEO and sharing
  slug            String  @unique
  metaTitle       String?
  metaDescription String?
  socialImage     String?

  // Analytics
  viewCount    Int       @default(0)
  lastViewedAt DateTime?

  // Audit fields
  createdBy String?
  updatedBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([startDate, endDate])
  @@index([isPublic, isFeatured])
  @@index([slug])
  @@map("church_seasons")
}


model Synaxar {
  id String @id @default(cuid())
  day Int
  month CopticMonths
  isSaint Boolean? @default(false)
  isMartyr Boolean? @default(false)
  isOccasion Boolean? @default(false)
  isMain Boolean? @default(false)
  name_ar String
  name_en String
  name_co String?
  description_ar String
  description_en String
  description_co String?
  image String?
  slug String
  postImage String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([slug])
  @@map("synaxar_data")
}